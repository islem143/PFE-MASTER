import rclpy
from rclpy.node import Node
from sensor_msgs.msg import LaserScan

class LaserRangefinder(Node):
    def __init__(self):
        super().__init__('laser_rangefinder')
        self.pub = self.create_publisher(Range, '/distance_sensor', 10)

    def laser_scan_callback(self, msg):
        ranges = msg.ranges
        closest_distance = min(ranges)
        distance_msg = Range()
        distance_msg.header = msg.header
        distance_msg.range = closest_distance
        self.pub.publish(distance_msg)

def main(args=None):
    rclpy.init(args=args)
    laser_rangefinder = LaserRangefinder()
    sub = laser_rangefinder.create_subscription(LaserScan, '/scan', laser_rangefinder.laser_scan_callback, 10)
    rclpy.spin(laser_rangefinder)
    laser_rangefinder.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()

